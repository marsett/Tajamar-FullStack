@model IEnumerable<MvcDynamoDbCoches.Models.Coche>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCoche)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>Motor</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCoche)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @if(item.Motor != null){
                    <span style="color: lawngreen;">Tiene motor</span>
                }else{
                    <span style="color: red;">Sin motor</span>
                }
            </td>
            <td>
                <img src="@item.Imagen" style="width: 50%; height: 50%;" />
            </td>
            <td>
                <a asp-controller="Coches" asp-action="Details" asp-route-idcoche="@item.IdCoche" class="btn btn-info">Details</a>
                <a asp-controller="Coches" asp-action="Delete" asp-route-idcoche="@item.IdCoche" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
