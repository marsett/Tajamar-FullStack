@model List<Empleado>

<h1 style="color: blue;">Empleados Almacenados Session V5</h1>

@if(Context.Session.GetString("IDSEMPLEADOS") == null){
    <h2 style="color: red;">
        No existen empleados en Session
    </h2>   
}

<p>
    <a asp-controller="Empleados" asp-action="SessionEmpleadosV5">Volver a almacenar empleados</a>
</p>

<h2 style="color: red;">
    @ViewData["MENSAJE"]
</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered table-warning">
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Oficio</th>
                <th>Salario</th>
                <th>IdDepartamento</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Empleado emp in Model)
            {
                <tr>
                    <td>@emp.Apellido</td>
                    <td>@emp.Oficio</td>
                    <td>@emp.Salario</td>
                    <td>@emp.IdDepartamento</td>
                    <td>
                        @* <a asp-action="DeleteEmpleadoSession" asp-route-idEmpleado="@emp.IdEmpleado" class="btn btn-danger">Delete</a> *@
                        <a asp-controller="Empleados"
                           asp-action="EmpleadosAlmacenadosV5"
                           asp-route-ideliminar="@emp.IdEmpleado">
                            Eliminar Session
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}

