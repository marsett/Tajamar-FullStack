@model List<Doctor>

@{
    List<string> especialidades = (List<string>)ViewData["ESPECIALIDADES"];
}

<h1>Doctores Especialidad</h1>

<form method="post">
    <label>Seleccione especialidad</label>
    <select name="especialidad" class="form-control">
        @foreach (string esp in especialidades)
        {
            <option value="@esp">@esp</option>
        }
    </select>
    <label>Incremento salarial</label>
    <input type="text" name="salario" class="form-control"/>
    <button class="btn btn-warning">
        Incrementar salarios
    </button>
</form>

@if (Model != null)
{
    <table class="table table-primary">
        <thead>
            <tr>
                <th>Id Doctor</th>
                <th>Apellido</th>
                <th>Especialidad</th>
                <th>Salario</th>
                <th>Id Hospital</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Doctor doctor in Model)
            {
                <tr>
                    <td>@doctor.Doctor_No</td>
                    <td>@doctor.Apellido</td>
                    <td>@doctor.Especialidad</td>
                    <td>@doctor.Salario</td>
                    <td>@doctor.Hospital_Cod</td>
                </tr>
            }
        </tbody>
    </table>
}