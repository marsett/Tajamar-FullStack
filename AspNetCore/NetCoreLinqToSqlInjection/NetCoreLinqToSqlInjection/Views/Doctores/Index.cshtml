@model List<Doctor>

<h1>
    Doctores SQL Server/Oracle
</h1>

<p>
    <a asp-controller="Doctores" asp-action="Create">
        Create New Doctor
    </a>
</p>

<table class="table d-xxl-table-row">
    <thead>
        <tr>
            <th>Id Doctor</th>
            <th>Apellido</th>
            <th>Especialidad</th>
            <th>Salario</th>
            <th>Hospital</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Doctor doctor in Model){
            <tr>
                <td>@doctor.IdDoctor</td>
                <td>@doctor.Apellido</td>
                <td>@doctor.Especialidad</td>
                <td>@doctor.Salario</td>
                <td>@doctor.IdHospital</td>
                <td>
                    <a asp-controller="Doctores"
                       asp-action="Update"
                       asp-route-iddoctor="@doctor.IdDoctor"
                       class="btn btn-warning">
                        Update
                    </a>
                    <a asp-controller="Doctores" 
                        asp-action="Delete" 
                        asp-route-iddoctor="@doctor.IdDoctor" 
                        class="btn btn-danger">
                        Delete
                    </a> 
                </td>
            </tr>
        }
    </tbody>
</table>