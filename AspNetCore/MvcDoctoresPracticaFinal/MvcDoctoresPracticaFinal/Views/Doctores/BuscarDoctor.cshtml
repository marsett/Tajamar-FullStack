@model List<Doctor>

@{
    List<string> especialidades = (List<string>)ViewData["ESPECIALIDADES"];
}

<h1>Doctores por Especialidad</h1>

<form method="post">
    <label>Especialidad:</label>
    <select name="especialidad" class="form-control">
        @foreach (string esp in especialidades)
        {
            <option value="@esp">@esp</option>
        }
    </select>
    <button class="btn btn-info">
        Buscar doctores
    </button>
</form>

@if (Model != null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Hospital_Cod</th>
                <th>Doctor_No</th>
                <th>Apellido</th>
                <th>Especialidad</th>
                <th>Salario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Doctor doctor in Model)
            {
                <tr>
                    <td>@doctor.Hospital_Cod</td>
                    <td>@doctor.Doctor_No</td>
                    <td>@doctor.Apellido</td>
                    <td>@doctor.Especialidad</td>
                    <td>@doctor.Salario</td>
                </tr>
            }
        </tbody>
    </table>
}