@model IEnumerable<MvcCoreAzureCosmos.Models.Coche>

@{
    ViewData["Title"] = "MisCoches";
}

<h1 style="color: blue;">Mis Coches de Cosmos</h1>

<p>
    <a asp-controller="Coches" asp-action="Create">Create New</a>
</p>

@if (Model != null)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Marca)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Modelo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Imagen)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marca)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modelo)
                    </td>
                    <td>
                        <img src="@item.Imagen" style="width: 80px; height: 80px;" />
                    </td>
                    <td>
                        <a asp-controller="Coches"
                           asp-action="Details"
                           asp-route-id="@item.Id"
                           class="btn btn-warning">
                            Details
                        </a>
                        <a asp-controller="Coches"
                           asp-action="Edit"
                           asp-route-id="@item.Id"
                           class="btn btn-info">
                            Edit
                        </a>
                        <a asp-controller="Coches"
                           asp-action="Delete"
                           asp-route-id="@item.Id"
                           class="btn btn-danger">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}