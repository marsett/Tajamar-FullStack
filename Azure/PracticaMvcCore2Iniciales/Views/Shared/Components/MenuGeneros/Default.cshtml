@model List<Genero>

<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
        Géneros
    </a>
    <ul class="dropdown-menu">
        @foreach(Genero genero in Model){
            <li>
                <a class="dropdown-item" asp-controller="Libros" asp-action="Libros" asp-route-idgenero="@genero.IdGenero">
                    @genero.Nombre
                </a>
            </li>
        }
    </ul>
</li>